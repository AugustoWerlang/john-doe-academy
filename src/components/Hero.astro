---
import { Image } from 'astro:assets';
import { SITE } from '../data/siteConfig';
import Button from './ui/Button.astro';
import Container from './ui/Container.astro';
import ImageFrame from './ui/ImageFrame.astro';
import heroPilot from '../assets/images/hero-pilot-cockpit.jpg';
---

<section class="relative overflow-hidden pt-10 pb-12 lg:pt-14 lg:pb-20">
    <Container>
        <div class="relative px-1 py-6 sm:px-2 sm:py-8 lg:px-4 lg:py-10">
            <div
                class="grid grid-cols-1 items-center gap-10 lg:grid-cols-[1.2fr_0.8fr] lg:gap-14"
            >
                <div data-reveal="0">
                    <p
                        class="tracking-label text-muted font-sans text-[10px] font-semibold uppercase"
                    >
                        {SITE.tagline}
                    </p>
                    <h1
                        class="text-primary mt-4 font-serif text-5xl leading-[0.97] tracking-tight sm:text-6xl lg:text-7xl"
                        transition:name="hero-title"
                    >
                        Fly with precision.
                        <span class="text-accent block"
                            >Train with confidence.</span
                        >
                    </h1>
                    <p
                        class="text-muted mt-6 max-w-xl font-sans text-base leading-relaxed lg:text-lg"
                    >
                        Structured lessons, modern aircraft, and instructors
                        focused on long-term skill. Built for first-timers and
                        future career pilots.
                    </p>
                    <div
                        class="mt-8 flex flex-col gap-4 sm:flex-row sm:items-center"
                    >
                        <Button
                            href="/?interest=discovery-flight&source=hero-primary#contact"
                            variant="primary"
                            size="lg"
                        >
                            Book Intro Flight
                        </Button>
                        <Button
                            href="/#programs"
                            variant="outline"
                            size="lg"
                            class="hover:border-primary hover:bg-primary hover:text-inverse"
                        >
                            Compare Programs
                        </Button>
                    </div>
                    <div class="mt-10 grid grid-cols-2 gap-4 sm:max-w-md">
                        <div
                            class="border-line-soft bg-surface-soft shadow-var(--shadow-s) rounded-2xl border px-4 py-3"
                        >
                            <p class="text-primary font-serif text-3xl">500+</p>
                            <p
                                class="tracking-label text-muted font-sans text-[10px] font-semibold uppercase"
                            >
                                Pilots Trained
                            </p>
                        </div>
                        <div
                            class="border-line-soft bg-surface-soft shadow-var(--shadow-s) rounded-2xl border px-4 py-3"
                        >
                            <p class="text-primary font-serif text-3xl">20+</p>
                            <p
                                class="tracking-label text-muted font-sans text-[10px] font-semibold uppercase"
                            >
                                Years in Austin
                            </p>
                        </div>
                    </div>
                </div>

                <div class="relative" data-reveal="0.12">
                    <ImageFrame>
                        <Image
                            src={heroPilot}
                            alt="Pilot in cockpit preparing for takeoff at John Doe Academy"
                            class="shadow-var(--shadow-l) aspect-4/5 w-full object-cover"
                            widths={[320, 480, 640, 760]}
                            sizes="(max-width: 1024px) 92vw, 38vw"
                            loading="eager"
                            fetchpriority="high"
                            transition:name="hero-image"
                        />
                    </ImageFrame>
                    <p
                        class="border-line-soft bg-surface-soft tracking-label text-muted absolute -bottom-3 left-4 rounded-full border px-4 py-2 font-sans text-[10px] font-semibold uppercase"
                    >
                        {SITE.certifications.join(' Â· ')}
                    </p>
                </div>
            </div>
        </div>
    </Container>
</section>
