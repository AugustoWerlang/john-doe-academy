<nav
    id="main-nav"
    class="border-line-soft bg-surface-soft sticky top-0 z-40 border-b transition-all duration-300"
>
    <div
        class="mx-auto flex max-w-7xl items-center justify-between px-6 py-4 lg:px-12"
    >
        <a
            href="/"
            class="text-primary hover:text-accent font-serif text-2xl font-semibold tracking-tight transition-colors"
            transition:name="site-logo"
        >
            {SITE.shortName}
        </a>

        <div class="hidden items-center gap-8 lg:flex">
            {
                mainNav.map((link) => (
                    <a
                        href={link.href}
                        aria-current={isActive(link.href) ? 'page' : undefined}
                        class={cn(
                            'tracking-label font-sans text-xs font-semibold uppercase transition-colors duration-200',
                            isActive(link.href)
                                ? 'text-primary'
                                : 'text-muted hover:text-accent',
                        )}
                    >
                        {link.label}
                    </a>
                ))
            }
            <Button href={ctaLink.href} variant="primary" size="sm">
                {ctaLink.label}
            </Button>
        </div>

        <button
            id="menu-toggle"
            type="button"
            class="flex h-11 w-11 flex-col items-center justify-center gap-1.5 rounded-full lg:hidden"
            aria-label="Open menu"
            aria-expanded="false"
            aria-controls="mobile-menu"
            aria-haspopup="dialog"
        >
            <span
                class="bg-primary block h-0.5 w-6 origin-center transition-all duration-300"
                id="bar-1"></span>
            <span
                class="bg-primary block h-0.5 w-6 transition-all duration-300"
                id="bar-2"></span>
            <span
                class="bg-primary block h-0.5 w-6 origin-center transition-all duration-300"
                id="bar-3"></span>
        </button>
    </div>
</nav>

<div
    id="mobile-menu"
    class="bg-primary text-inverse fixed inset-0 z-50 flex flex-col justify-between px-8 py-10"
    role="dialog"
    aria-modal="true"
    aria-hidden="true"
    aria-labelledby="mobile-menu-title"
    hidden
>
    <div class="flex items-start justify-between">
        <p id="mobile-menu-title" class="text-inverse font-serif text-2xl">
            {SITE.shortName}
        </p>
        <button
            id="mobile-menu-close"
            type="button"
            class="tracking-label text-inverse-muted hover:text-inverse font-sans text-xs font-semibold uppercase transition-colors"
            aria-label="Close menu"
        >
            Close
        </button>
    </div>

    <div class="flex flex-col gap-5">
        {
            mainNav.map((link, i) => (
                <a
                    href={link.href}
                    aria-current={isActive(link.href) ? 'page' : undefined}
                    class={cn(
                        'mobile-nav-link font-serif text-4xl opacity-0 transition-colors',
                        isActive(link.href)
                            ? 'text-accent'
                            : 'text-inverse hover:text-accent',
                    )}
                    style={`animation-delay: ${(0.08 + i * 0.07).toFixed(2)}s`}
                >
                    {link.label}
                </a>
            ))
        }
        <a
            href={ctaLink.href}
            class="mobile-nav-link bg-accent tracking-label text-inverse mt-2 inline-flex w-fit rounded-full px-5 py-2.5 font-sans text-xs font-semibold uppercase opacity-0"
            style={`animation-delay: ${(0.08 + mainNav.length * 0.07).toFixed(2)}s`}
        >
            {ctaLink.label}
        </a>
    </div>

    <a
        href={`tel:${SITE.phoneRaw}`}
        class="mobile-nav-link text-inverse-muted hover:text-accent font-sans text-sm opacity-0 transition-colors"
        style={`animation-delay: ${(0.08 + (mainNav.length + 1) * 0.07).toFixed(2)}s`}
    >
        {SITE.phone}
    </a>
</div>

<style>
    :global(.nav-scrolled) {
        background-color: var(--color-surface-soft);
        border-bottom-color: var(--color-line-soft);
        box-shadow: var(--shadow-m);
    }

    .mobile-menu-open .mobile-nav-link {
        animation: nav-link-in 0.45s ease both;
    }
</style>

<script>
    function initNav() {
        const toggle = document.getElementById('menu-toggle');
        const closeBtn = document.getElementById('mobile-menu-close');
        const menu = document.getElementById('mobile-menu');
        const bar1 = document.getElementById('bar-1');
        const bar2 = document.getElementById('bar-2');
        const bar3 = document.getElementById('bar-3');

        if (!toggle || !closeBtn || !menu || toggle.dataset.bound === 'true')
            return;
        toggle.dataset.bound = 'true';

        let open = false;
        let previousFocusedElement: HTMLElement | null = null;

        const getFocusableEls = () => {
            const selectors =
                'a[href], button:not([disabled]), input:not([disabled]), select:not([disabled]), textarea:not([disabled]), [tabindex]:not([tabindex="-1"])';
            return Array.from(menu.querySelectorAll(selectors)).filter(
                (el): el is HTMLElement =>
                    el instanceof HTMLElement &&
                    !el.hasAttribute('disabled') &&
                    !el.hasAttribute('hidden') &&
                    el.getAttribute('aria-hidden') !== 'true',
            );
        };

        const setMenu = (state: boolean) => {
            open = state;
            toggle.setAttribute('aria-expanded', String(open));
            toggle.setAttribute(
                'aria-label',
                open ? 'Close menu' : 'Open menu',
            );
            menu.setAttribute('aria-hidden', String(!open));

            if (open) {
                previousFocusedElement =
                    document.activeElement instanceof HTMLElement
                        ? document.activeElement
                        : null;
                menu.hidden = false;
                menu.classList.add('mobile-menu-open');
                document.body.style.overflow = 'hidden';
                bar1?.style.setProperty(
                    'transform',
                    'rotate(45deg) translateY(4px)',
                );
                bar2?.style.setProperty('opacity', '0');
                bar3?.style.setProperty(
                    'transform',
                    'rotate(-45deg) translateY(-4px)',
                );
                closeBtn.focus();
            } else {
                menu.hidden = true;
                menu.classList.remove('mobile-menu-open');
                document.body.style.overflow = '';
                bar1?.style.setProperty('transform', 'none');
                bar2?.style.setProperty('opacity', '1');
                bar3?.style.setProperty('transform', 'none');
                if (
                    previousFocusedElement &&
                    previousFocusedElement.isConnected
                ) {
                    previousFocusedElement.focus();
                }
                previousFocusedElement = null;
            }
        };

        const handleKeydown = (event: KeyboardEvent) => {
            if (!open) return;

            if (event.key === 'Escape') {
                event.preventDefault();
                setMenu(false);
                return;
            }

            if (event.key !== 'Tab') return;
            const focusableEls = getFocusableEls();
            if (!focusableEls.length) {
                event.preventDefault();
                return;
            }

            const first = focusableEls[0];
            const last = focusableEls[focusableEls.length - 1];
            const activeElement = document.activeElement;

            if (event.shiftKey) {
                if (activeElement === first || !menu.contains(activeElement)) {
                    event.preventDefault();
                    last.focus();
                }
                return;
            }

            if (activeElement === last) {
                event.preventDefault();
                first.focus();
            }
        };

        toggle.addEventListener('click', () => setMenu(!open));
        closeBtn.addEventListener('click', () => setMenu(false));
        menu.querySelectorAll('a').forEach((a) => {
            a.addEventListener('click', () => setMenu(false));
        });
        document.addEventListener('keydown', handleKeydown);
    }

    initNav();
    document.addEventListener('astro:after-swap', initNav);
</script>
