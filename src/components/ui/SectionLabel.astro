---
import { cn } from '../../lib/ui/cn';
import { cva, type VariantProps } from 'class-variance-authority';
import type { HTMLAttributes } from 'astro/types';

const sectionLabelVariants = cva(
    'font-sans text-[10px] font-semibold tracking-label uppercase',
    {
        variants: {
            tone: {
                default: 'text-muted',
                inverse: 'text-inverse-muted',
            },
        },
        defaultVariants: {
            tone: 'default',
        },
    },
);

type SectionLabelVariants = VariantProps<typeof sectionLabelVariants>;

interface Props extends HTMLAttributes<'p'> {
    tone?: SectionLabelVariants['tone'];
    class?: string;
}

const {
    tone = 'default',
    class: className = '',
    ...rest
} = Astro.props as Props;

const classes = cn(sectionLabelVariants({ tone }), className);
---

<p class={classes} {...rest}>
    <slot />
</p>
