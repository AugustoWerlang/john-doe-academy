---
import { cn } from '../../lib/ui/cn';
import { cva, type VariantProps } from 'class-variance-authority';
import type { HTMLAttributes } from 'astro/types';

const buttonVariants = cva(
    'inline-flex items-center justify-center rounded-full font-sans font-bold tracking-label uppercase transition-colors duration-200 shadow-[var(--shadow-m)]',
    {
        variants: {
            variant: {
                primary: 'bg-accent text-inverse hover:bg-accent-strong',
                secondary: 'bg-primary text-inverse hover:bg-accent',
                outline:
                    'border border-line-soft bg-transparent text-primary hover:border-primary hover:bg-primary hover:text-inverse',
                ghost: 'bg-transparent text-primary hover:bg-primary hover:text-inverse',
            },
            size: {
                sm: 'px-4 py-2 text-xs',
                md: 'px-6 py-3 text-xs',
                lg: 'px-10 py-4 text-sm',
            },
            fullWidth: {
                true: 'w-full',
            },
        },
        defaultVariants: {
            variant: 'primary',
            size: 'md',
            fullWidth: false,
        },
    },
);

type ButtonVariants = VariantProps<typeof buttonVariants>;

interface Props extends HTMLAttributes<'button'> {
    href?: string;
    variant?: ButtonVariants['variant'];
    size?: ButtonVariants['size'];
    fullWidth?: ButtonVariants['fullWidth'];
    type?: 'button' | 'submit';
    class?: string;
}

const {
    href,
    variant = 'primary',
    size = 'md',
    fullWidth = false,
    type = 'button',
    class: className = '',
    ...rest
} = Astro.props as Props;

const classes = cn(buttonVariants({ variant, size, fullWidth }), className);
---

{
    href ? (
        <a href={href} class={classes} {...rest}>
            <slot />
        </a>
    ) : (
        <button type={type} class={classes} {...rest}>
            <slot />
        </button>
    )
}
